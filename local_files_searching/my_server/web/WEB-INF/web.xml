<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>my_server</servlet-name>
        <servlet-class>com.server.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>my_server</servlet-name>
        <url-pattern>/local_files_searching/my_server</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>my_delivery</servlet-name>
        <servlet-class>com.server.DeliveryPicture</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>my_delivery</servlet-name>
        <url-pattern>/local_files_searching/my_delivery</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>my_type</servlet-name>
        <servlet-class>com.server.TypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>my_type</servlet-name>
        <url-pattern>/local_files_searching/my_type</url-pattern>
    </servlet-mapping>
</web-app>