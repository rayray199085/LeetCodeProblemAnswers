/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
class Solution {
       public static TreeNode sortedArrayToBST(int[] nums) {
        if (nums.length == 0) {
            return null;
        }
        return  buildTreeWithBinarySearch(nums,0,nums.length-1);
    }

    private static TreeNode buildTreeWithBinarySearch(int[] nums, int start, int end) {
        if(start > end){
            return null;
        }
        int mid = (start + end) / 2;
        TreeNode node = new TreeNode(nums[mid]);
        node.left = buildTreeWithBinarySearch(nums,start,mid-1);
        node.right = buildTreeWithBinarySearch(nums,mid + 1,end);
        return node;
    }
}
